version: 1.0.{build}-beta
clone_depth: 1
assembly_info:
  patch: true
  file: '**\AssemblyInfo.*'
  assembly_version: '{version}'
  assembly_file_version: '{version}'
  assembly_informational_version: '{version}'
services: mssql2014
cache: packages -> **\packages.config
before_build:
- cmd: nuget restore
build:
  project: UOW.sln
  publish_nuget: true
  publish_nuget_symbols: true
  include_nuget_references: true
  verbosity: minimal
before_test:
- ps: Invoke-Expression "$($env:appveyor_build_folder)\AppVeyor.Tests.BeforeTests.ps1"
deploy:
- provider: NuGet
  api_key:
    secure: FQ3g9pNLUHdiEs/6XUvR52I81RhAzaLgU8uPL0c/npjuzegjFDwibC6qJ9lkD8kb
